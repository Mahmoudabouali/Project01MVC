@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home";
}


<div>
    <a class="btn btn-primary mt-3" asp-action="Create">Craete new employee</a>
</div>
@if (Model.Any())
{
    <h1>All employees</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Age)</td>
                <td>@Html.DisplayNameFor(d => d.Salary)</td>
                <td>@Html.DisplayNameFor(d => d.Address)</td>
                <td>@Html.DisplayNameFor(d => d.Email)</td>
                <td>@Html.DisplayNameFor(d => d.Phone)</td>
                <td>@Html.DisplayNameFor(d => d.IsActive)</td>



                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@Html.DisplayFor(e => item.Salary)</td>
                    <td>@item.Address</td>
                    <td>@Html.DisplayFor(e => item.Email)</td>
                    <td>@item.Phone</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <i>class="fa-solid fa-circle" style="color:green"</i>
                        }
                        else
                        {
                            <i>class="fa-solid fa-circle" style="color:red"</i>
                        }
                    </td>

                    <td><a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id"><i class="fas fa-eye"></i>Details</a></td>
                    <td><a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-Edit"></i>Edit</a></td>
                    <td><a asp-action="Delete" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-trash"></i>Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-warning"> 
        <h2>no employee</h2>
    </div>
}