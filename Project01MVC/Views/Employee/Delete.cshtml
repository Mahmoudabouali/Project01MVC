@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.Name Department</h1>
<form>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input readonly class="form-control" asp-for="Age" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input readonly class="form-control" asp-for="Address" />
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input readonly class="form-control" asp-for="Salary" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input readonly class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input readonly class="form-control" asp-for="Phone" />
    </div>
    <div class="form-group">
        <label asp-for="IsActive"></label>
        <input readonly asp-for="IsActive" />
    </div>
<div class="mt-3">
    <button class="btn btn-success" type="submit">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>
</form>
